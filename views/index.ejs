<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Post Manager</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
  <div class="container">
    <h1>Your Posts</h1>

    <!-- Button to navigate to Create Post page -->
    <a href="/create" class="create-post-btn">Create New Post</a>

    <!-- Post List -->
    <div class="posts">
      <% if (posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="post">
            <h2><%= post.title %></h2>
            <p><%= post.content %></p>
            <form action="/edit/<%= post.id %>" method="GET" class="inline-form">
              <button type="submit">Edit</button>
            </form>
            <form action="/delete/<%= post.id %>" method="POST" class="inline-form">
              <button type="submit">Delete</button>
            </form>
          </div>
        <% }) %>
      <% } else { %>
        <p>No posts available. Create a new one <a href="/create">here</a>.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
